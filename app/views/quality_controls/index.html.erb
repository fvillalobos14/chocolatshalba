<script>
    $(document).ready(function(){
        var sum = 0;
        $(".PesoLB").each(function() {
            var value = $(this).text();
            if(!isNaN(value) && value.length != 0) {
                sum += parseFloat(value);
            }
        });
        $(this).find('.total-pesoLB').html(sum);
    });
</script>

<script>
