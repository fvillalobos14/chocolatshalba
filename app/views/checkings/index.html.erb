<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <div class = "page-header">
            <h1>Revisión de lotes</h1>
          </div>
          <table class = "striped bordered">
            <thead>
              <tr>
                <th>Código de lote</th>
                <th>Proveedor</th>
                <th>Fecha de ingreso</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @batches.each do |batch| %>
              <% if batch.certificate_checks.first == nil && batch.ft %>
                <tr>
                  <td><%= batch.enterCode %></td>
                  <td><%=	batch.entry_control.organization.name %></td>
                  <td><%=	batch.entry_control.entryDate %></td>
                  <td><%=	link_to "Revisar", batch %></td>
                </tr>
              <% end %>
            <% end %>
             <% @batches.each do |batch| %>
              <% if (batch.certificate_checks.first != nil && batch.certificate_checks.first.decision != 1) && batch.ft %>
                <tr>
                  <td><%= batch.enterCode %></td>
                  <td><%= batch.entry_control.organization.name %></td>
                  <td><%= batch.entry_control.entryDate %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
