<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <%= form_for [@organization, @entryControl] do |f| %>
            <%= f.hidden_field :entryDate, :value => Date.today %>
            <%= f.hidden_field :exchangeRate, :value => 32.80 %>
            <div class="page-header">
              <h1>Control de ingreso</h1>
            </div>
            <p>
              Cooperativa:
              <%= @organization.name %>
            </p>

            <div class = "input-field">
              <%= f.label :entry_number, "NÃºmero de hoja de ingreso" %>
              <%= f.number_field :entry_number, min: 0 %>
            </div>

            <div class = "input-field">
              <%= f.label :receivedBy, "Recibido por" %>
              <%= f.text_field :receivedBy %>
            </div>

            <div class = "input-field">
              <%= f.label :deliveredBy, "Entregado por" %>
              <%= f.text_field :deliveredBy %>
            </div>
            <br>
            <p>
              <%= f.submit "Aceptar", class:"btn btn-default btn-lg" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
